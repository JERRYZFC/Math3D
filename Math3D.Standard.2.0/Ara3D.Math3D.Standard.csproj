    <Compile Include="..\src\MathOpsPartial.cs" Link="MathOpsPartial.cs" />
    <Compile Include="..\src\Matrix4x4.cs" Link="Matrix4x4.cs" />
    <Compile Include="..\src\Plane.cs" Link="Plane.cs" />
    <Compile Include="..\src\PlaneIntersectionType.cs" Link="PlaneIntersectionType.cs" />
    <Compile Include="..\src\Quaternion.cs" Link="Quaternion.cs" />
    <Compile Include="..\src\Random.cs" Link="Random.cs" />
    <Compile Include="..\src\Ray.cs" Link="Ray.cs" />
    <Compile Include="..\src\Sphere.cs" Link="Sphere.cs" />
    <Compile Include="..\src\Structs.cs" Link="Structs.cs" />
